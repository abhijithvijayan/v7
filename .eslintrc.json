{
  "extends": [
    "@abhijithvijayan/eslint-config/typescript",
    "@abhijithvijayan/eslint-config/react"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "globals": {
    "JSX": "readonly"
  },
  "rules": {
    "class-methods-use-this": "off",
    "react/no-unescaped-entities": "warn"
  }
}